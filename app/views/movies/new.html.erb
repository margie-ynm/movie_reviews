<h1>New Movie</h1>

<% if @movie.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @movie.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @movie do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit %>
<% end %>
